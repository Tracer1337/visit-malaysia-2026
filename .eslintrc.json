{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from `@/_lib/i18n/routing` instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from `@/_lib/i18n/routing` instead."
      },
      {
        "name": "@radix-ui/react-checkbox",
        "message": "Please import from `@/_components/Checkbox` instead."
      },
      {
        "name": "@radix-ui/react-dialog",
        "message": "Please import from `@/_components/Dialog` instead."
      },
      {
        "name": "@radix-ui/react-select",
        "message": "Please import from `@/_components/Select` instead."
      }
    ]
  }
}
